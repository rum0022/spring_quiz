<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
 
 <mapper namespace="com.quiz.lesson02.mapper.StoreMapper">
 
 	<select id="selectStoreList" resultType="com.quiz.lesson02.domain.Store">
 	 	
 	 	SELECT
 	 		*
 	 	FROM
 	 		`store`;
 	</select>
 	
 	<select id="selectStoreById" resultType="com.quiz.lesson02.domain.Store">
 		
 		SELECT
 			`id`
			,`name`
			,`phoneNumber`
			,`address`
			,`businessNumber`
			,`introduce`
			,`createdAt`
			,`updatedAt`
		FROM
			`store`	
		WHERE
			`id` = #{id}	
 	</select>
 	
 	<select id="selectReviewByStoreId" resultType="com.quiz.lesson02.domain.Review">
 		SELECT
	 		`storeId`
			,`menu`
			,`userName`
			,`point`
			,`review`
			,`createdAt`
			,`updatedAt`
		FROM
			`new_review`	
 		ORDER BY
 			`createdAt` DESC
 			
 	</select>
 </mapper>
 
