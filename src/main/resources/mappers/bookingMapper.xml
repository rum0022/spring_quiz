<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.quiz.lesson06.mapper.BookingMapper">
 
 <select id="selectBookingList" resultType="com.quiz.lesson06.domain.Booking">
 
	SELECT
		`id`
		,`name`
		,`headcount`
		,`day`
		,`date`
		,`phoneNumber`
		,`state`
		,`createdAt`
		,`updatedAt`
	FROM
		`booking`	
 </select>
 
 <delete id="deleteBookingById">
 	DELETE
 	FROM
 		`booking`
 	WHERE
 		`id` = #{id}
 </delete>
 
 <insert id="insertBooking">
 	INSERT INTO `booking`
 	(
 		`name`
		,`headcount`
		,`day`
		,`date`
		,`phoneNumber`
		,`status`
		,`createdAt`
		,`updatedAt`
 	)
 	VALUES
 	(
 		#{name}
 	    ,#{headcount}
 		,#{day}
 		,#{date}
 		,#{phoneNumber}
 		,#{status}
 		,NOW()
 		,NOW()
 	)
 </insert>
 </mapper>